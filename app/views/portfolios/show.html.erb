<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image.url, 'main') %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <% if logged_in?(:site_admin) %>
        <%= link_to 'Delete Portfolio', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <hr>
      <em><%= @portfolio_item.subtitle %></em><br/><br/>
      <p><%= @portfolio_item.body %></p>

      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
